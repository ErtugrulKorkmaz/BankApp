@{
    ViewData["Title"] = "Transfer";
}
<h2>Transfer</h2>
<form method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Recipient Account Number</label>
        <input class="form-control" type="text" name="recipientAccountNumber" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Amount</label>
        <input class="form-control" type="number" name="amount" step="0.01" min="0.01" required />
    </div>
    <div class="text-danger">@Html.ValidationSummary()</div>
    <button type="submit" class="btn btn-primary">Transfer</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    @Html.AntiForgeryToken()
 </form>


